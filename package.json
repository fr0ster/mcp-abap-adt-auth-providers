    "CHANGELOG.md",
    "LICENSE"
  ],
  "keywords": [
    "abap",
    "sap",
    "adt",
    "jwt",
    "authentication",
    "token",
    "provider",
    "authorization_code",
    "client_credentials",
    "mcp",
    "abap-adt"
  ],
  "author": "Oleksii Kyslytsia <oleksij.kyslytsja@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/fr0ster/mcp-abap-adt-auth-providers#readme",
  "bugs": {
    "url": "https://github.com/fr0ster/mcp-abap-adt-auth-providers/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fr0ster/mcp-abap-adt-auth-providers.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "auth-authorization-code": "./bin/auth-authorization-code.ts",
    "auth-client-credentials": "./bin/auth-client-credentials.ts",
    "auth-device-flow": "./bin/auth-device-flow.ts"
  },
  "scripts": {
    "chrono": "./tools/version-stats.sh",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "lint": "npx biome check --write src",
    "lint:check": "npx biome check src",
    "format": "npx biome format --write src",
    "build": "npm run --silent clean && npx biome check src --diagnostic-level=error && npx tsc -p tsconfig.json",
    "build:fast": "npx tsc -p tsconfig.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:check": "npx tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "engines": {
    "node": ">=18.0.0"
